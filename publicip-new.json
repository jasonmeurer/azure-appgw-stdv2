{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "MgmtPublicIPAddressName": {
      "type": "string"
    },
    "virtualNetworkName": {
      "type": "string"
    },
    "fwuntrustpip": {
      "type": "string"
    },
    "publicIPAddressType": {
      "type": "string"
    },
    "baseUrl": {
      "type": "string"
    },
     "StandardLoadBalancer": {
            "type": "string"
     }
  },
  "variables": {
    "mgmt": "[concat('mgmtIP-', parameters('MgmtPublicIPAddressName'))]",
    "untrust": "[concat('untIP-', parameters('fwuntrustpip'))]"
  },
  "resources": [
    {
      "apiVersion": "2017-08-01",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('mgmt')]",
      "location": "[parameters('location')]",
      "sku":
            {
                "name": "[parameters('StandardLoadBalancer')]"
            },
      "properties": {
        "publicIPAllocationMethod": "[parameters('publicIPAddressType')]",
        "dnsSettings": {
          "domainNameLabel": "[parameters('MgmtPublicIPAddressName')]"
        }
      }
    },
    {
      "apiVersion": "2017-08-01",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('untrust')]",
      "location": "[parameters('location')]",
      "sku":
            {
                "name": "[parameters('StandardLoadBalancer')]"
            },
      "properties": {
        "publicIPAllocationMethod": "[parameters('publicIPAddressType')]",
        "dnsSettings": {
          "domainNameLabel": "[concat(parameters('fwuntrustpip'), substring(uniqueString(resourceGroup().id), 0, 9))]"
        }
      }
    }
  ],
  "outputs": {
    "publicIpId": {
      "value": "[resourceId(concat('Microsoft.Network','/','publicIPAddresses'),variables('mgmt'))]",
      "type": "string"
    },
    "publicUntIpId": {
      "value": "[resourceId(concat('Microsoft.Network','/','publicIPAddresses'),variables('untrust'))]",
      "type": "string"
    },
    "fqdn": {
      "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',variables('mgmt')),providers('Microsoft.Network', 'publicIPAddresses').apiVersions[0]).dnsSettings.fqdn]",
      "type": "string"
    },
    "fqdnUnt": {
      "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',variables('untrust')),providers('Microsoft.Network', 'publicIPAddresses').apiVersions[0]).dnsSettings.fqdn]",
      "type": "string"
    }
  }
}
